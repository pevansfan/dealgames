{% extends 'base.html.twig' %}

{% block title %}Signup{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    {% for error in registrationForm.vars.errors %}
    <div class="alert alert-danger">{{ error.message }}</div>
    {% endfor %}

    <div class="form-section">
        <div class="wrapper">
            <h1>Signup</h1>
            <p id="error-message"></p>

            {{ form_start(registrationForm, {'attr': {'id': 'form'}}) }}
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            <div>
                <label for="firstname-input">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path
                            d="M480-480q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47ZM160-160v-112q0-34 17.5-62.5T224-378q62-31 126-46.5T480-440q66 0 130 15.5T736-378q29 15 46.5 43.5T800-272v112H160Z" />
                    </svg>
                </label>
                {{ form_widget(registrationForm.firstname, {'attr': {'id': 'firstname-input', 'placeholder': 'Prénom'}})
                }}
            </div>

            <div>
                <label for="lastname-input">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path
                            d="M480-480q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47ZM160-160v-112q0-34 17.5-62.5T224-378q62-31 126-46.5T480-440q66 0 130 15.5T736-378q29 15 46.5 43.5T800-272v112H160Z" />
                    </svg>
                </label>
                {{ form_widget(registrationForm.lastname, {'attr': {'id': 'lastname-input', 'placeholder': 'Nom'}}) }}
            </div>

            <div>
                <label for="email-input">
                    <span>@</span>
                </label>
                {{ form_widget(registrationForm.email, {'attr': {'id': 'email-input', 'placeholder': 'Email'}}) }}
            </div>

            <div>
                <label for="password-input">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path
                            d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z" />
                    </svg>
                </label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'id': 'password-input', 'placeholder':
                'Mot de passe'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            {# <div>
                <label for="repeat-password-input">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                        <path
                            d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z" />
                    </svg>
                </label>
                {{ form_widget(registrationForm.repeatPassword, {'attr': {'id': 'repeat-password-input', 'placeholder':
                'Repeat Password'}}) }}
                {{ form_errors(registrationForm.repeatPassword) }}
            </div> #}

            <div class="agree-terms">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'id': 'agree-terms-input', 'placeholder': 'Agree
                terms'}}) }}
                <span>J'accepte les termes de confidentialités.</span>
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit">S'inscrire</button>
            {{ form_end(registrationForm) }}

            <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
        </div>
    </div>
{% endblock %}